    Sub CargarReporte()
        Dim QuincenaSQL, RegionSQL, EjecutivoSQL, SupervisorSQL, PromotorSQL, CadenaSQL, TiendaSQL As String

        If cmbPeriodo.SelectedValue <> "" Then
            QuincenaSQL = Acciones.Slc.cmb("H.id_quincena", cmbQuincena.SelectedValue)
            RegionSQL = Acciones.Slc.cmb("TI.id_region", cmbRegion.SelectedValue)
            EjecutivoSQL = Acciones.Slc.cmb("REL.region_mars", cmbEjecutivo.SelectedValue)
            SupervisorSQL = Acciones.Slc.cmb("REL.id_supervisor", cmbSupervisor.SelectedValue)
            PromotorSQL = Acciones.Slc.cmb("H.id_usuario", cmbPromotor.SelectedValue)
            CadenaSQL = Acciones.Slc.cmb("TI.id_cadena", cmbCadena.SelectedValue)
            TiendaSQL = Acciones.Slc.cmb("TI.id_tienda", cmbTienda.SelectedValue)

            CargaGrilla(ConexionMars.localSqlServer, _
                        "SELECT TI.nombre_region, REL.Ejecutivo, H.id_usuario, H.id_quincena, TI.clasificacion_tienda, " & _
                        "TI.nombre_grupo, TI.nombre_cadena, TI.nombre_formato, TI.codigo, TI.nombre, TI.area_nielsen, " & _
                        "HDET1.[1]A1,HDET1.[2]A2,HDET1.[3]A3,HDET1.[4]A4,HDET1.[5]A5,HDET1.[6]A6,HDET1.[7]A7,HDET1.[8]A8, " & _
                        "HDET1.[9]A9,HDET1.[10]A10,HDET1.[11]A11,HDET1.[12]A12,HDET1.[13]A13,HDET1.[14]A14,HDET1.[15]A15,HDET1.[16]A16, " & _
                        "PUN.nombre_punto, HDET2.[1],HDET2.[3],HDET2.[5],HDET2.[6],HDET2.[7],HDET2.[8], " & _
                        "HDET2.[9],HDET2.[10],HDET2.[11],HDET2.[12],HDET2.[13],HDET2.[15],HDET2.[16],HDET2.[17] " & _
                        "FROM AS_Rutas_Eventos as H  " & _
                        "INNER JOIN View_Tiendas_AS as TI ON TI.id_tienda=H.id_tienda " & _
                        "INNER JOIN View_Usuario_AS as REL ON REL.id_usuario=H.id_usuario " & _
                        "INNER JOIN AS_Puntos_Interrupcion_Captura as Quin_PUN ON Quin_PUN.id_quincena=H.id_quincena " & _
                        "INNER JOIN AS_Puntos_Interrupcion as PUN ON PUN.id_punto=Quin_PUN.id_punto " & _
                        "LEFT JOIN (select * from View_Historial_Segmentos " & _
                        "WHERE orden=" & cmbPeriodo.SelectedValue & ") as HDET1 " & _
                        "ON H.id_tienda=HDET1.id_tienda AND H.id_quincena=HDET1.id_quincena AND H.id_usuario=HDET1.id_usuario " & _
                        "LEFT JOIN (select * from View_Historial_Puntos_Todos_AS " & _
                        "WHERE orden=" & cmbPeriodo.SelectedValue & ") AS HDET2 " & _
                        "ON H.id_tienda=HDET2.id_tienda AND H.id_quincena=HDET2.id_quincena AND HDET2.id_punto=Quin_PUN.id_punto AND H.id_usuario=HDET2.id_usuario " & _
                        "WHERE H.orden=" & cmbPeriodo.SelectedValue & " " & _
                        " " + QuincenaSQL + RegionSQL + " " & _
                        " " + EjecutivoSQL + SupervisorSQL + PromotorSQL + " " & _
                        " " + CadenaSQL + TiendaSQL + " " & _
                        "ORDER BY H.id_usuario,TI.nombre,H.id_quincena,PUN.nombre_punto ", gridReporte)
        Else
            gridReporte.Visible = False
        End If
    End Sub

